<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items and Participants</title>
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link your CSS file here -->
</head>
<body>
    <h1>Items and Participants</h1>
    
    <table border="1">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Item Category</th>
                <th>Contestant Number</th>
                <th>Participant Name</th>
                <th>Group Name</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <% item.participants.forEach(participant => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.category %></td>
                        <td><%= participant.contestantNumber %></td>
                        <td><%= participant.name %></td>
                        <td><%= participant.groupName %></td>
                    </tr>
                <% }) %>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
